
<div class="container mt-3">
<h1>All our flats (<%= @flats.count %>)</h1>
  <div class=" flats mt-4">
    <% @flats.each do |flat| %>
    <div class="flat shadow d-flex flex-column justify-content-between">
        <h2><%= flat.name %></h2>
        <p><%= flat.address %></p>
        <div class="flat-details d-flex text-center">
        <p><i class="fa fa-users"></i></p>
        <%= flat.number_of_guests %>
        <p><i class="fa fa-euro"></i></p>
        <%= flat.price_per_night %>
        </div>
        <div>
        <hr>
        <%= link_to 'More info', flat_path(flat) %>
        <%= link_to 'Edit', edit_flat_path(flat) %>
        <%= link_to 'Delete', flat_path(flat), method: :delete %>
        </div>
    </div>
    <% end %>
  </div>
</div>
